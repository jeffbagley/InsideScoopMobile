<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="InsideScoopMobile.ListTab" Title="List View">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="10">
                <Label Text="Sort By:" 
                    VerticalOptions="Center"/>
                <Picker x:Name="Dropdown"
                        Title="Nearest"
                        VerticalOptions="Center" 
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <TableView Intent="Data">
                    <TableRoot>
                        <TableSection Title="List View">
                            
                            
                            <ImageCell ImageSource="" Text="Taco Truck" Detail="Mexican" Tapped="Handle_Tapped"></ImageCell>
                            <ImageCell ImageSource="" Text="Noodle Wagon" Detail="Asian"></ImageCell>
                            <ImageCell ImageSource="" Text="Ice Cream 4Ever" Detail="Ice Cream"></ImageCell>
                            
                            
                        </TableSection>
                    </TableRoot>
                </TableView>
         </StackLayout>

    </ContentPage.Content>
</ContentPage>
