<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="InsideScoopMobile.EditUserProfile">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="EDIT PROFILE"
                   AbsoluteLayout.LayoutBounds="150,0,150,150"/>
            
            <Label Text="First Name"
                   AbsoluteLayout.LayoutBounds="20,50,100,100"/>
            <Entry Placeholder="First Name from DB"
                   AbsoluteLayout.LayoutBounds="120,45,200,30"/>
            
            <Label Text="Last Name"
                   AbsoluteLayout.LayoutBounds="20,100, 100, 100"/>
            <Entry Placeholder="Last Name from DB"
                   AbsoluteLayout.LayoutBounds="120,95,200,30"/>
            
            <Label Text="Favorites"
                   AbsoluteLayout.LayoutBounds="20, 150, 100, 100"/>
            
            <Label Text="Allow Push Notifications?"
                   AbsoluteLayout.LayoutBounds="20, 350, 250, 50"/>
            <Switch AbsoluteLayout.LayoutBounds="230, 345, 105, 50"/>
            
            
            <Button Text="SUBMIT"
                    BackgroundColor="Fuchsia"
                    AbsoluteLayout.LayoutBounds="220, 400, 100, 50"/>
            
            
        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>
