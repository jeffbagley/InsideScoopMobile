            <TableView Intent="Data">
                    <TableRoot>
                        <TableSection Title="List View">
                            
                            
                            <ImageCell ImageSource="" Text="Morning Coffee" Detail="Beverage" Tapped="Handle_Tapped" ></ImageCell>
                            <ImageCell ImageSource="" Text="Taco Truck" Detail="Mexican" Tapped="Handle_Taco"></ImageCell>    
                            <ImageCell ImageSource="" Text="Noodle Wagon" Detail="Asian"></ImageCell>
                            <ImageCell ImageSource="" Text="Ice Cream 4Ever" Detail="Ice Cream"></ImageCell>
                            
                            
                        </TableSection>
                    </TableRoot>
                </TableView>
         </StackLayout>
        
        
        
        
        
        
        
