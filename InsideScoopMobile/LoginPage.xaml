<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="InsideScoopMobile.LoginPage">  
    <Grid>
        <RelativeLayout>
            <Image Source="reflect.png"
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"/>
        </RelativeLayout>
        <AbsoluteLayout>
            <Image Source="title.png"
                   AbsoluteLayout.LayoutBounds=".5,.1,400,150" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Entry Placeholder="Username"
                   x:Name="Email"
                   AbsoluteLayout.LayoutBounds=".5,.3,400,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Entry Placeholder="Password"
                   IsPassword="true"
                   x:Name="Password"
                   AbsoluteLayout.LayoutBounds=".5,.4,400,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Button Text="Login"
                    FontSize="Large"
                    TextColor="White"
                    x:Name="Login"
                    Clicked="Login_Clicked"
                    AbsoluteLayout.LayoutBounds=".25,.5,100,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Button Text="Sign Up"
                    FontSize="Large"
                    TextColor="White"
                    x:Name="SignUp"
                    Clicked="SignUp_Clicked"
                    AbsoluteLayout.LayoutBounds=".75,.5,100,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Button Text="Guest"
                    FontSize="Large"
                    TextColor="White"
                    x:Name="Guest"
                    Clicked="Guest_Clicked"
                    AbsoluteLayout.LayoutBounds=".5,.55,100,50" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>
    </Grid>
    
</ContentPage>


